<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.ColorPicker" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="Theme.ColorPicker.SplashScreen" parent="Theme.AppCompat.NoActionBar">
        <!-- Set the splash screen background, animated icon, and animation
        duration. -->
        <item name="android:windowBackground">@drawable/logo</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="postSplashScreenTheme">@style/Theme.ColorPicker</item>
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimationDuration">2000</item>
    </style>
</resources>